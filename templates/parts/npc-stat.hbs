<div>
    <div class="stat-header">{{label}}</div>
    {{#if editMode}}
    <div class="stat-value">
            {{#if attributeShadePath}}
            {{log this}}
            <select name="system.{{attributeShadePath}}">
                {{selectOptions @root.shades selected=(concat "system." attributeShadePath)}}
            </select>
            {{/if}}
        <input type="number" name="system.{{attributePath}}" data-dtype="Number" value="{{attributeValue}}">
    </div>
    {{else}}
        {{#if rollable}}
        <div
            {{#if open}}data-action="rollStatOpen"
            {{else}}data-action="rollStat"
            {{/if}}
            data-stat="system.{{attributePath}}"
            data-shade="system.{{attributeShadePath}}"
            data-rollable-name="{{statName}}"
            class="stat-value stat-rollable modifiable"
            {{#if draggable}} draggable="true" data-accessor="{{accessor}}" data-stat-name="{{titlecase statName}}"{{/if}}>
        {{else}}
        <div class="stat-value">
        {{/if}}
        {{attributeShade}}{{attributeValue}}
    </div>
    {{/if}}
</div>