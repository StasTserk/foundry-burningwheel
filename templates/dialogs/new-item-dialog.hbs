<h2>{{searchTitle}}</h2>
<div class="search-grid">
    {{#each items as |i|}}
    <div data-item-name="{{i.name}}" class="flex-row search-entry" data-item-source="{{i.itemSource}}" draggable="true" data-id="{{i.id}}" data-source="{{i.source}}">
        {{#if ../showImages}}
        <div class="item-select-image">
            <img src="{{i.img}}">
        </div>
        {{/if}}
        <div class="item-select flex-row">
            <div class="item-select-header">
                <input type="checkbox" id="{{i.id}}" value="{{i.id}}">
                <label for="{{i.id}}">{{i.name}}</label>
            </div>
            <div class="item-select-info">
                {{i.itemDataLeft}}
            </div>
            <div class="item-select-info">
                {{i.itemDataMid}}
            </div>
            <div class="item-select-info">
                Src: {{i.itemSource}}
            </div>
        </div>
    </div>
    {{/each}}
</div>
<div class="search-box">
    <i class="fas fa-search"></i>
    <input type="text" class="new-item-dialog-search" placeholder="Search">
</div>
<div class="import-compendium-select">
    Sources:
    <select name="select-compendiums">
        {{#each sources as |c|}}
        <option value="{{c}}">{{c}}</option>
        {{/each}}
    </select>
</div>