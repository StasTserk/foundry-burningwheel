                </select>
            </label>
            {{/if}}
            {{#if p.showAction6}}
            <label>Action 3
                <select name="action6" data-index="{{i}}">
                    {{#select p.action6}}
                    <option value="">Do Nothing</option>
                    {{#each ../actionOptions as |ao|}}
                    <optgroup label="{{@key}}">
                        {{#each ao as |o|}}
                        <option value="{{o}}">{{{o}}}</option>
                        {{/each}}
                    </optgroup>
                    {{/each}}
                    {{/select}}
                </select>
            </label>
            {{/if}}
            {{/if}}
        </div>
        <div class="volley">
            {{#if p.showActions}}
            <label>Action 1
                <select name="action7" data-index="{{i}}">
                    {{#select p.action7}}
                    {{#if p.action8}}{{else}}<option value="">Do Nothing</option>{{/if}}
