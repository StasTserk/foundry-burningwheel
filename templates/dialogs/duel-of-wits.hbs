                {{/each}}
                {{/select}}
            </select>
            <button type="button" class="dow-roll" data-action="roll-dow" data-actor-id="{{actor2.id}}" data-skill-id="{{actor2Skill}}"><i class="fas fa-dice"></i></button>
            {{/if}}
            {{#if gmView}}
