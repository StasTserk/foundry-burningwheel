<div class="item-grid armor-grid">
    <div class="armor-header">~</div>
    <div class="armor-header">Dice</div>
    <div class="armor-header">Dmg</div>
    <div class="armor-header">Location</div>
    <div class="armor-header">Type</div>

    {{#if armor.head}}
    <button type="button" class="rollable {{armor.head.system.helmDisplayClass}}" data-roll-type="armor" data-item-id="{{armor.head._id}}" data-location="Helm">
        <i class="fas fa-dice"></i>
    </button>
    <div class="armor-row">{{armor.head.system.shade}}{{armor.head.system.dice}}</div>
    <input type="number" class="armor-damage-input {{armor.head.system.helmDisplayClass}}" data-item-id="{{armor.head._id}}" data-binding="system.damageHelm" value="{{armor.head.system.damageHelm}}">
    {{else}}
    <button disabled><i class="fas fa-dice"></i></button>
    <div class="armor-row"></div>
    <div class="armor-row"></div>
    {{/if}}
    <div class="armor-row">Head</div>
    <div class="armor-row">{{armor.head.name}}</div>

    {{#if armor.torso}}
