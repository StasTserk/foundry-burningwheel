                        {{/each}}
                    {{/selectGroups}}
                </select>
            {{/if}}
            {{#if showV2S2Card}}
                <div class='action-card'>{{v2s2}}</div>
            {{else}}
                <div class='card-back'><i class='fas fa-dharmachakra'></i></div>
            {{/if}}
        </div>
        <div class='dow-volley'>
            {{#if showS2Select}}
                <select class='action-select' name='v3s2'>
                    <option value='?'>Pick an Option</option>
                    {{#selectGroups v3s2}}
                        {{#each ../actionOptions as |ao|}}
                            <optgroup label='{{@key}}'>
                                {{#each ao as |o|}}
                                    <option value='{{o}}'>{{o}}</option>
                                {{/each}}
                            </optgroup>
                        {{/each}}
                    {{/selectGroups}}
                </select>
            {{/if}}
            {{#if showV3S2Card}}
                <div class='action-card'>{{v3s2}}</div>
            {{else}}
                <div class='card-back'><i class='fas fa-dharmachakra'></i></div>
            {{/if}}
        </div>
    </div>
</form>