{
    "include": ["scripts/**/*.ts", "module/**/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "types": [
            "foundry-pc-types"
        ],
