<form autocomplete="off" class="skill-form flex-column">
    <div class="flex-row">
        {{#if showImage}}
        <img class="item-image" src="{{item.img}}" title="{{item.name}}" data-edit="img"/>
        {{/if}}
        <input name="name" type="text" value="{{item.name}}" class="item-sheet-name">
    </div>
    <div class="item-form-group">
        <label class="item-setting-label">
            Skill Type
        </label>
        <select name="data.skilltype" value="{{data.skilltype}}" >
            {{#select data.skilltype}}
            {{#each skillTypes as |type t|}}
            <option value="{{t}}">{{type}}</option>
            {{/each}}
            {{/select}}
        </select>
        <label class="item-setting-label">
            Restrictions
        </label>
        <input type="text" name="data.restrictions" value="{{data.restrictions}}" placeholder="None">
    </div>
    <div class="item-form-group">
        <label class="item-setting-label">Root 1</label>
        <select name="data.root1" value="{{data.root1}}" >
            {{#select data.root1}}
            {{#each skillRoots as |root r|}}
            <option value="{{r}}">{{root}}</option>
            {{/each}}
            {{/select}}
        </select>
        <label class="item-setting-label">Root 2 (Optional)</label>
        <select name="data.root2" value="{{data.root2}}" >
            {{#select data.root2}}
            <option value="">None</option>
            {{#each skillRoots as |root r|}}
            <option value="{{r}}">{{root}}</option>
            {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="item-form-group">
        {{#if item.data.hasOwner}}
        <label for="{{item.id}}-aptitude" class="item-setting-label">Aptitude</label>
        <input id="{{item.id}}-aptitude" type="number" name="data.aptitude" disabled value="{{data.aptitude}}" placeholder="N/A">
        <div class="pill-toggle">
            <input id="{{item.id}}-learning" type="checkbox" name="data.learning" {{ checked data.learning }}>
            <label for="{{item.id}}-learning" >Learning</label>
        </div>
        {{/if}}
        <div class="pill-toggle">
            <input id="{{item.id}}-wild" type="checkbox" name="data.wildFork" {{ checked data.wildFork }}>
            <label for="{{item.id}}-wild" title="This skill explodes on 1's and 6's when used as a fork.">Wild Fork</label>
        </div>
        <div class="pill-toggle">
            <input id="{{item.id}}-open-skill" type="checkbox" name="data.open" {{ checked data.open }}>
            <label for="{{item.id}}-open-skill" >Open</label>
        </div>
        <div class="pill-toggle">
            <input id="{{item.id}}-magical" type="checkbox" name="data.magical" {{ checked data.magical }}>
            <label for="{{item.id}}-magical" title="Special magical skills such as Dwarven Arts, Elven skill songs and spell songs. Determines cost for opening in character burner.">Magical Skill</label>
        </div>
        <div class="pill-toggle">
            <input id="{{item.id}}-training" type="checkbox" name="data.training" {{ checked data.training }}>
            <label for="{{item.id}}-training" >Training Skill</label>
        </div>
        <div class="pill-toggle">
            <input id="{{item.id}}-tools" type="checkbox" name="data.tools" {{ checked data.tools }}>
            <label for="{{item.id}}-tools" >Requires Tools</label>
        </div>
    </div>
    <textarea name="data.description">{{data.description}}</textarea>
</form>
