<div class="learning flex-row" {{#if isOwner}}draggable="true"{{/if}} data-id="{{skill._id}}" aria-label="learning rollable {{skill.name}}">
    {{#if isOwner}}
    <i class="fas fa-edit item-action-icon" data-action="editItem" data-id="{{skill._id}}"></i>
    <i class="fas fa-trash item-action-icon" data-action="delItem" data-id="{{skill._id}}"></i>
    {{/if}}
    <h3>{{skill.name}}</h3>
    {{#if isOwner}}
        <button type="button" class="rollable modifiable" data-rollable-name="{{skill.name}}" data-skill-id="{{skill._id}}" data-roll-type="learning" aria-label="roll skill">
            <i class="fas fa-dice"></i>
        </button>
    {{/if}}
    <div class="learning-xp" aria-label="learning xp">
        {{#multiboxes skill.system.learningProgress needed=skill.system.aptitude}}
        <input type="radio"
            id="{{skill.system.safeId}}-learningProgress-0"
            value="0" 
            data-item-id="{{skill._id}}"
            data-binding="system.learningProgress">
        {{#if isOwner}}
        <label
            for="{{skill.system.safeId}}-learningProgress-0"
            class="progress-clear">
            <i class="fas fa-times-circle"></i>
        </label>
        {{/if}}
        <input
            type="radio"
            id="{{skill.system.safeId}}-learningProgress-1"
            value="1" 
            data-item-id="{{skill._id}}"
            data-binding="system.learningProgress">
        <label
            for="{{skill.system.safeId}}-learningProgress-1"
            class="progress-tick progress-tick-1">&nbsp;
        </label>
        <input
            type="radio"
            id="{{skill.system.safeId}}-learningProgress-2"
            value="2" 
            data-item-id="{{skill._id}}"
            data-binding="system.learningProgress">
        <label
            for="{{skill.system.safeId}}-learningProgress-2"
            class="progress-tick progress-tick-2">
            &nbsp;
        </label>
        <input
            type="radio"
            id="{{skill.system.safeId}}-learningProgress-3"
            value="3"
            
            data-item-id="{{skill._id}}"
            data-binding="system.learningProgress"
            >
        <label
            for="{{skill.system.safeId}}-learningProgress-3"
            class="progress-tick progress-tick-3">
            &nbsp;
        </label>
        <input
            type="radio" id="{{skill.system.safeId}}-learningProgress-4"
            value="4" 
