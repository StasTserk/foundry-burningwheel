<div class='npc-editable'>
    <div
        class='npc-weapon-name'
        data-id='{{weapon._id}}'
        data-action='edit'
    >{{weapon.name}}</div>
    <select data-item-id='{{weapon._id}}' data-binding='system.skillId'>
        {{#select weapon.system.skillId}}
            <option value=''>None</option>
            {{#each martialSkills as |s|}}
                <option value='{{s._id}}'>{{s.name}}</option>
            {{/each}}
        {{/select}}
    </select>
    <i class='fas fa-trash' data-id='{{weapon._id}}' data-action='delete'></i>
</div>