{
    "include": ["scripts/**/*.ts", "module/**/*.ts", "types/**/*.d.ts"],
    "exclude": [ "node_modules" ],
    "compilerOptions": {
        "sourceMap": true,
        "types": [
            "@league-of-foundry-developers/foundry-vtt-types",
            "select2",
            "handlebars"
        ],
        "typeRoots": [ "./types", "./types/collections" ],
		"target": "ES2020",
		"lib": [
			"DOM",
			"es2020"
        ],
        "outDir": "bin",
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "experimentalDecorators": true
    }
}