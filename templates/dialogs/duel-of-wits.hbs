                            </optgroup>
                        {{/each}}
                    {{/selectGroups}}
                </select>
            {{/if}}
            {{#if showV3S1Card}}
                <div class='action-card'>{{v3s1}}</div>
            {{else}}
                <div class='card-back'><i class='fas fa-dharmachakra'></i></div>
            {{/if}}
        </div>
        <div class='dow-participant'>
            <div class='participant-name'>{{actor2.name}}</div>
            {{#if actor2}}
                <img
                    class='dow-portrait'
                    src='{{actor2.img}}'
                    title='{{actor2.name}}'
                    data-edit='img'
                />
            {{else}}
                <img
                    class='dow-portrait'
                    src='icons/svg/mystery-man.svg'
                    title='Choose an interlocutor'
                    data-edit='img'
                />
            {{/if}}
            <div>Body of Argument:</div>
            <input
                type='number'
                {{disabled side2ReadOnly}}
                name='boa2'
                value='{{boa2}}'
            />/
            <input
                type='number'
                {{disabled side2ReadOnly}}
                name='boa2Max'
                value='{{boa2Max}}'
            />
            {{#if (eq side2ReadOnly false)}}
                <select name='actor2Skill'>
                    {{selectOptions actor2Skills selected=actor2Skill valueAttr="id" labelAttr="label"}}
                </select>
                <button
                    type='button'
                    class='dow-roll'
                    data-action='roll-dow'
                    data-actor-id='{{actor2.id}}'
                    data-skill-id='{{actor2Skill}}'
                ><i class='fas fa-dice'></i></button>
            {{/if}}
            {{#if gmView}}
                <div class='pill-toggle'>
                    <input
                        type='checkbox'
                        name='blindS2'
                        id='blindS2'
                        {{checked blindS2}}
                    />
                    <label for='blindS2'>Hide Actions</label>
                </div>
            {{/if}}
        </div>
        <div class='dow-volley'>
            {{#if showS2Select}}
                <select class='action-select' name='v1s2'>
                    <option value='?'>Pick an Option</option>
                    {{#selectGroups v1s2}}
                        {{#each ../actionOptions as |ao|}}
