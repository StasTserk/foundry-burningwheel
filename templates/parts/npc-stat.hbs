<div>
    <div class="stat-header">{{label}}</div>
    <div class="stat-value">
        {{#if editMode}}
            {{#if attributeShadePath}}
            <select name="data.{{attributeShadePath}}">
                {{#select attributeShade}}
                <option value="B">B</option>
                <option value="G">G</option>
                <option value="W">W</option>
                {{/select}}
            </select>
            {{/if}}
        <input type="number" name="data.{{attributePath}}" data-dtype="Number" value="{{attributeValue}}">
        {{else}}
        {{attributeShade}} {{attributeValue}}
        {{/if}}
    </div>
</div>