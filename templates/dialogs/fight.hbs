                    {{#each ../actionOptions as |ao|}}
                    <optgroup label="{{@key}}">
                        {{#each ao as |o|}}
                        <option value="{{o}}">{{{o}}}</option>
                        {{/each}}
                    </optgroup>
                    {{/each}}
                    {{/select}}
                </select>
            </label>
            {{/if}}
            {{/if}}
        </div>
