                </select>
            </label>
            {{#if p.showAction5}}
            <label>Action 2
                <select name="action5" data-index="{{i}}">
                    {{#select p.action5}}
                    {{#if p.action6}}{{else}}<option value="">Do Nothing</option>{{/if}}
                    {{#each ../actionOptions as |ao|}}
                    <optgroup label="{{@key}}">
                        {{#each ao as |o|}}
                        <option value="{{o}}">{{{o}}}</option>
                        {{/each}}
                    </optgroup>
                    {{/each}}
